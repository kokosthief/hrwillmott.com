    <style>
      body {
        background: linear-gradient(45deg, #12120c, #2a2f17, #041c46, #4b2f08);
        background-size: 400% 400%;
        animation: gradientAnimation 10s ease infinite;
        color: #fff;
        font-family: Arial, Helvetica, sans-serif;
        overflow: hidden;
      }

      @keyframes gradientAnimation {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }
      a {
        color: inherit;
      }
      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .main__article {
        margin: 0 auto;
        max-width: 700px;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 0 1rem;
      }

      .top__content {
        margin-bottom: 2rem;
        text-align: center;
      }
      .profile__img {
        border-radius: 50%;
        margin-bottom: 1rem;
        width: 200px;
        height: auto;
      }
      .social-links__list {
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        max-width: 400px;
        margin: auto;
        padding-top: 15px;
      }
      .social-links__list .social-links__link {
        transition: transform 100ms ease-in-out;
      }
      .social-links__list .social-links__link:hover {
        transform: scale(1.1);
      }
      .links__list {
        width: 100%;
        margin: 1rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .links__list .links__link {
        display: flex;
        width: 100%;
        text-align: center;
        background-color: #fff;
        color: #212121;
        margin-bottom: 1rem;
        border-radius: 3rem;
        transition: transform 100ms ease-in-out;
        cursor: pointer;
      }
      .links__list .links__link a {
        padding: 1rem 2rem;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
      }
      .links__list .links__link:hover {
        transform: scale(1.025);
      }
    </style>
  </head>
  <body>
    <article class="main__article">
      <div class="top__content">
        <img
          class="profile__img"
          width="128px"
          height="128px"
          src={mainContent.imgSrc}
          alt={`Profile image of ${mainContent.name}`}
        />
        <h1>{mainContent.name}</h1>
        <p>{mainContent.tagline}</p>
        <ul class="social-links__list">
          {
            socialLinks.map((link) => (
              <li class="social-links__link">
                <a href={link.url} target="_blank" rel="noopener noreferrer">
                  <Icon name={link.icon} width="36px" height="36px" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <ul class="links__list">
        {
          links.map((link) => (
            <li class="links__link">
              <a href={link.url}>{link.text}</a>
            </li>
          ))
        }
      </ul>
    </article>
  </body>
</html>
