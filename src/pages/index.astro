---
import { Icon } from "astro-icon";
import { mainContent, links, socialLinks } from "../links";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
